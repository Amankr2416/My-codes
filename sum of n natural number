public static void printSum(int m, int n, int sum){
        if(m == n){
            sum=sum+m;
        System.out.println(sum);
        
            return;
        }
    
    sum=sum+m;
    printSum(m+1, n, sum);
    }

    public static void main(String args[]){

        Scanner sc=new Scanner(System.in);
       int m=1;
       int n=sc.nextInt();
       int sum=0;
       
        
        printSum(m, n, sum);
        }
